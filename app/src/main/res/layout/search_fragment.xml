<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragment.HomeFragment"
        android:layout_marginStart="@dimen/spacing_mlarge"
        android:layout_marginEnd="@dimen/spacing_mlarge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/searchTextView"
            android:text="Discover"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:fontFamily="@font/alata_regular"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxlarge"
            app:layout_constraintTop_toBottomOf="@id/searchTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textColorHint="@color/grey_40"
            android:hint="Search for any event here"
            android:paddingStart="@dimen/spacing_xxlarge"
            android:singleLine="true"
            android:paddingBottom="@dimen/spacing_middle"
            android:paddingTop="@dimen/spacing_middle"
            android:paddingEnd="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/spacing_middle"
            android:background="@drawable/curved_search" />

        <ImageView
            android:layout_width="@dimen/spacing_mlarge"
            android:layout_height="@dimen/spacing_mlarge"
            android:src="@drawable/ic_search"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:tint="@color/grey_20"
            app:layout_constraintTop_toTopOf="@id/searchEditText"
            app:layout_constraintBottom_toBottomOf="@id/searchEditText"
            app:layout_constraintStart_toStartOf="@id/searchEditText"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/searchEditText"
            android:layout_marginTop="@dimen/spacing_middle"
            tools:itemCount="5"
            tools:listitem="@layout/item_search"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/searchRecyclerView"
            app:layout_constraintStart_toStartOf="@id/searchEditText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchCategoryTextView"
            android:text="Search by category"
            android:layout_marginTop="@dimen/spacing_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:fontFamily="@font/alata_regular"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_one"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/searchCategoryTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cat_two">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/game_otp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_blue"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Play it on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_two"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/searchCategoryTextView"
                app:layout_constraintStart_toEndOf="@id/cat_one"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/spacing_mxlarge">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cult_otp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_yellow"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Coloralo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_three"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                app:layout_constraintTop_toBottomOf="@id/cat_one"
                app:layout_constraintStart_toStartOf="@id/cat_one"
                app:layout_constraintEnd_toStartOf="@id/cat_four">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mech_opt"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_red"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textMech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Mechavoltz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:freezesText="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_four"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                app:layout_constraintTop_toBottomOf="@id/cat_one"
                app:layout_constraintStart_toEndOf="@id/cat_three"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/spacing_mxlarge">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/dev_opt"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_green"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Coderz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_five"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                app:layout_constraintTop_toBottomOf="@id/cat_three"
                app:layout_constraintStart_toStartOf="@id/cat_one"
                app:layout_constraintEnd_toEndOf="@id/cat_three">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/robo_opt"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_purple"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Robotiles"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cat_six"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                app:layout_constraintTop_toBottomOf="@id/cat_three"
                app:layout_constraintStart_toEndOf="@id/cat_three"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/spacing_mxlarge">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/spacing_middle"
                    app:cardElevation="@dimen/zero_dimen">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/zwar_opt"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/curved_card_blue_dark"
                        android:alpha="0.6"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:text="Z-Wars"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_32"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/alata_regular"
                    android:layout_marginStart="@dimen/spacing_middle"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>