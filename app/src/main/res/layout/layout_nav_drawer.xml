<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_blur"
        android:alpha="0.7"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="-300dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/disk_backgrnd"
        app:civ_border_width="6dp"
        app:civ_border_color="#FF000000"/>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="100dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_disk"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="?actionBarSize"
        android:src="#FF000000"
        app:civ_border_color="@color/grey_10"
        app:civ_border_width="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="-100dp" />


    <ImageView
        android:id="@+id/view_back"
        android:src="@drawable/ic_skip_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/view_disk"
        app:layout_constraintRight_toLeftOf="@id/view"
        android:layout_marginRight="60dp"/>

    <ImageView
        android:id="@+id/view_prev"
        android:src="@drawable/ic_skip_previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@id/view_disk"
        app:layout_constraintRight_toLeftOf="@id/view"
        android:layout_marginRight="60dp"/>

    <ImageView
        android:id="@+id/view_play"
        android:src="@drawable/ic_pause_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/view_disk"
        app:layout_constraintTop_toTopOf="@id/view_disk"
        app:layout_constraintRight_toLeftOf="@id/view"
        android:layout_marginRight="15dp"/>

    <com.bvapp.arcmenulibrary.ArcMenu
        android:id="@+id/arcMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        app:layout_constraintRight_toLeftOf="@id/view"
        android:layout_marginRight="70dp"
        arc:menuType="normal"
        arc:menuChildSize="48dp"
        arc:menuGravity="Right_Middle"
        arc:menuClickAnim="true"
        arc:menuChildAnim="false"
        arc:menuShadowElevation="true"
        arc:menuNormalColor="@color/colorAccent"
        arc:menuImage="@color/blue_400"
        android:layout_gravity="center_horizontal|right"
        />

</androidx.constraintlayout.widget.ConstraintLayout>