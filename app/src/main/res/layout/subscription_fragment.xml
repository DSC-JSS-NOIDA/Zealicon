<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SubscriptionFragment"
    android:background="#000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/subscriptionTextView"
        android:text="Subscription"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:fontFamily="@font/alata_regular"/>

    <EditText
        android:id="@+id/subscriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xxlarge"
        app:layout_constraintTop_toBottomOf="@id/subscriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textColorHint="@color/grey_40"
        android:hint="Search for Zeal Information"
        android:paddingStart="@dimen/spacing_xxlarge"
        android:imeOptions="actionSearch"
        android:paddingEnd="@dimen/spacing_middle"
        android:paddingTop="@dimen/spacing_middle"
        android:paddingBottom="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:background="@drawable/curved_search" />

    <ImageView
        android:layout_width="@dimen/spacing_mlarge"
        android:layout_height="@dimen/spacing_mlarge"
        android:src="@drawable/ic_search"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:tint="@color/grey_20"
        app:layout_constraintTop_toTopOf="@id/subscriptionEditText"
        app:layout_constraintBottom_toBottomOf="@id/subscriptionEditText"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myAccountTextView"
        android:text="My Account"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subscriptionEditText"
        android:layout_marginTop="@dimen/spacing_middle"
        android:fontFamily="@font/alata_regular"/>



</androidx.constraintlayout.widget.ConstraintLayout>