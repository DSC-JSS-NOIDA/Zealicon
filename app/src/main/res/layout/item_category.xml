<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cat_five"
    android:layout_marginTop="@dimen/spacing_mxlarge"
    app:layout_constraintTop_toBottomOf="@id/searchCategoryTextView"
    app:layout_constraintStart_toStartOf="@id/searchCategoryTextView"
    app:layout_constraintEnd_toEndOf="@id/searchCategoryTextView"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/spacing_middle"
        app:cardElevation="@dimen/zero_dimen">

        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cultural_category"/>

        <ImageView
            android:id="@+id/categoryGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/curved_card_purple"
            android:alpha="0.6"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:includeFontPadding="false"
        android:text="Robotiles"
        android:textColor="@color/white"
        android:textSize="@dimen/text_32"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fontFamily="@font/alata_regular"
        android:layout_marginStart="@dimen/spacing_middle"/>

</androidx.constraintlayout.widget.ConstraintLayout>